<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Selección de agencia -->
    <TextView
        android:text="Agencia"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spAgency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupBackground="#1E1E1E"
        android:layout_marginBottom="12dp" />

    <!-- Fecha base -->
    <TextView
        android:text="Fecha base"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnPickDate"
            android:text="Elegir fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvPickedDate"
            android:text="—"
            android:textColor="#CCCCCC"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Rango: día / semana / mes -->
    <RadioGroup
        android:id="@+id/rgRange"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbDay"
            android:text="Día"
            android:checked="true"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rbWeek"
            android:text="Semana"
            android:textColor="@android:color/white"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rbMonth"
            android:text="Mes"
            android:textColor="@android:color/white"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnFilter"
        android:text="Aplicar filtro"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- KPIs rápidos -->
    <TextView
        android:id="@+id/tvSummary"
        android:textColor="#CCCCCC"
        android:text="—"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Lista -->
    <ProgressBar
        android:id="@+id/progress"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:indeterminateTint="#BB86FC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvEmpty"
        android:text="No hay vehículos en el rango seleccionado."
        android:textColor="#AAAAAA"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/lvVehicles"
        android:divider="#222222"
        android:dividerHeight="1dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
