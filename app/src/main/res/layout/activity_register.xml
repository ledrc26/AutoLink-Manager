<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:padding="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:text="Crear cuenta"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Campo nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#BBBBBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Campo correo -->
        <EditText
            android:id="@+id/etEmail"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#BBBBBB"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Campo contraseña -->
        <EditText
            android:id="@+id/etPassword"
            android:hint="Contraseña (mín. 6)"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#BBBBBB"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Selector de agencia disponible -->
        <TextView
            android:id="@+id/tvAgencyHint"
            android:text="Selecciona la agencia a la que solicitas acceso"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spAgency"
            android:spinnerMode="dropdown"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Botón Registrar -->
        <Button
            android:id="@+id/btnRegister"
            android:text="Registrar"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Barra de carga -->
        <ProgressBar
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:indeterminateTint="#BB86FC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Mensaje cuando no hay agencias libres -->
        <TextView
            android:id="@+id/tvNoAgencies"
            android:text="No hay agencias disponibles por ahora."
            android:textColor="#AAAAAA"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
