<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/tvTitle"
        android:text="Solicitudes Pendientes"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- ListView de solicitudes -->
    <ListView
        android:id="@+id/lvRequests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTitle"
        android:divider="#2E2E2E"
        android:dividerHeight="1dp" />

    <!-- Mensaje cuando no hay solicitudes -->
    <TextView
        android:id="@+id/tvNoRequests"
        android:text="No hay solicitudes pendientes"
        android:textColor="#888888"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Indicador de carga -->
    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:indeterminateTint="#BB86FC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>