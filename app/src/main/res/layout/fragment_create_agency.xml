<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Campo: Nombre de la agencia -->
        <EditText
            android:id="@+id/etAgencyName"
            android:hint="Nombre de la agencia"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#BBBBBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Campo: Teléfono -->
        <EditText
            android:id="@+id/etPhone"
            android:hint="Teléfono"
            android:inputType="phone"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#BBBBBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- Vista previa de ubicación -->
        <TextView
            android:id="@+id/tvLocationPreview"
            android:text="Ubicación: (lat, lng)"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- Botón: usar ubicación actual -->
        <Button
            android:id="@+id/btnPickLocation"
            android:text="Usar ubicación actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

        <!-- Botón: crear agencia -->
        <Button
            android:id="@+id/btnCreateAgency"
            android:text="Crear agencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <!-- Indicador de progreso -->
        <ProgressBar
            android:id="@+id/progress"
            android:visibility="gone"
            android:indeterminateTint="#BB86FC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
