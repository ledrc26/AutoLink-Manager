<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".ui.hojalateria.HojalateriaFragment"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servicio: Hojalatería"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TextView
        style="@style/FormSectionTitleBasic"
        android:text="Tipo de trabajo"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="16dp">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupTipoHojalateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPintar"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pintar el carro"
                android:textColor="#FFFFFF"
                android:theme="@style/Theme.MaterialComponents.DayNight"/>
            <com.google.android.material.chip.Chip
            android:id="@+id/chipBanio"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baño de pintura"
            android:textColor="#FFFFFF"
            android:theme="@style/Theme.MaterialComponents.DayNight"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPulido"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulido y encerado"
                android:textColor="#FFFFFF"
                android:theme="@style/Theme.MaterialComponents.DayNight"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>


    <TextView
        style="@style/FormSectionTitleBasic"
        android:text="Color"/>
    <LinearLayout
        android:id="@+id/layout_color_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#222222"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true">

        <View
            android:id="@+id/view_color_preview"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#4CAF50"/> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textColor="#AAAAAA"
        android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_color_hex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="44CAF50"
            android:textColor="@android:color/white"
            android:gravity="end"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <LinearLayout style="@style/FormFieldContainerBasic">
            <TextView style="@style/FormLabelBasic" android:text="Fecha de ingreso"/>
            <EditText
                android:id="@+id/et_fecha_ingreso_hojalateria"
                style="@style/FormEditTextBasic"
                android:hint="dd/mm/aaaa"
                android:focusable="false"
                android:clickable="true"/>
        </LinearLayout>
        <LinearLayout style="@style/FormFieldContainerBasic" android:layout_marginStart="8dp">
            <TextView style="@style/FormLabelBasic" android:text="Fecha de salida"/>
            <EditText
                android:id="@+id/et_fecha_salida_hojalateria"
                style="@style/FormEditTextBasic"
                android:hint="dd/mm/aaaa"
                android:focusable="false"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>
    <TextView style="@style/FormLabelBasic" android:text="Costo"/>
    <EditText
        android:id="@+id/et_costo_hojalateria"
        style="@style/FormEditTextBasic"
        android:inputType="numberDecimal"
        android:text="0"
        android:layout_marginBottom="16dp"/>


    <TextView
        style="@style/FormSectionTitleBasic"
        android:text="Estado de pago" />
    <RadioGroup
        android:id="@+id/rg_estado_pago_hojalateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rb_pagado_hojalateria"
            style="@style/FormRadioButtonBasic"
            android:text="Pagado"/>
        <RadioButton
            android:id="@+id/rb_no_pagado_hojalateria"
            style="@style/FormRadioButtonBasic"
            android:text="No pagado"
            android:checked="true"
            android:layout_marginStart="16dp"/>
    </RadioGroup>

    <TextView style="@style/FormLabelBasic" android:text="Notas"/>
    <EditText
        android:id="@+id/et_notas_hojalateria"
        style="@style/FormEditTextBasic"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_guardar_hojalateria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GUARDAR"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_cancelar_hojalateria"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCELAR"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="#AAAAAA"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
</androidx.core.widget.NestedScrollView>