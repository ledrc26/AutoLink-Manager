    <style name="CalendarHeader" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="CalendarDateText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#DDDDDD</item>
    </style>
    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#AAAAAA</item>
    </style>

    <style name="CalendarWidgetTheme" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@android:color/white</item>
        <item name="android:unfocusedMonthDateColor">#888888</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayTextDark</item>
        <item name="android:dateTextAppearance">@style/CalendarDateTextDark</item>
        <item name="android:selectedWeekBackgroundColor">#3300BCD4</item> </style>

    <style name="CalendarWeekDayTextDark" parent="android:TextAppearance.DeviceDefault.Small">
